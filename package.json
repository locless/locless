{
    "name": "locless-mono",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "prettier": "^3.2.5",
        "turbo": "latest"
    },
    "workspaces": {
        "packages": ["packages/*", "apps/*"],
        "nohoist": ["**/react-native", "**/react-native/**", "**/expo", "**/expo/**", "**/@clerk", "**/@clerk/**"]
    },
    "packageManager": "yarn@1.22.22",
    "engines": {
        "node": ">=18"
    }
}
